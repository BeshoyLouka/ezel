doctype 5
html
  head
    title Ezel
    link( href='http://fonts.googleapis.com/css?family=Quattrocento', rel='stylesheet', type='text/css' )
    :stylus
      body
        background white
        font-family 'Quattrocento', serif
        width 800px
        position relative
        color #444
        line-height 1.6em
        font-size 16px
        margin 40px auto 200px auto
      img
        float left
      h1
        position absolute
        left 400px
        top 140px
        font-size 72px
        font-weight normal
      p:nth-of-type(3)
        clear both
        padding-top 20px
      p:nth-of-type(2)
        clear both
        position absolute
        top 130px
        padding 110px 0px 0 402px
        line-height 1.4em
      a
        color #444
      code
        font-size 11px
        font-family courier
        background #f2f2f2
        border-radius 4px
        padding 4px 7px
      h2
        font-size 32px
        font-weight bold
      h3
        font-size 21px
        font-weight bold
      h2, h3
        margin 0
        padding 0
      p
        padding 0
        margin 0
        margin-bottom 1em
      h2, h3
        margin 1em 0
      ol, ul
        padding 0 0 0 20px
  body
    a( href='https://github.com/artsy/ezel' )
      img(
        style='position: fixed; top: 0; right: 0; border: 0;',
        src='https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png',
        alt='Fork me on GitHub'
      )
    include rm.md